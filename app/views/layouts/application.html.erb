<!DOCTYPE html>
<html>
  <head>
    <title>FannyLikesCooking</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag asset_path('fc.png') %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/b4e5ca6111.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <% if controller.controller_name == "pages" && controller.action_name == "home" %>
    <nav class="home-nav">
      <div class="home-logo">
      <%= link_to "FannyLikesCooking", root_path, class: "logo logo-white" %>
      </div>
    </nav>
    <%= yield %>
    <footer class="home-footer">
      <p>Copyright FannyLikesCooking© 2020 | All Rights Reserved.</p>
    </footer>
    <% else %>
      <div class="navbar-parent">
        <nav class="website-nav">
          <div class="home-logo">
          <%= link_to "cookbook", root_path, class: "logo logo-black" %>
          </div>
          <div class="navigation">
          <%= link_to "browse ingredients", ingredients_path, class: "website-button button-white" %>
          <%= link_to "browse categories", categories_path, class: "website-button button-white" %>
          <%#= link_to "surprise me", surprise_path, class: "website-button button-white" %>
          </div>
        </nav>
      </div>
      <%= yield %>
      <footer class="website-footer">
        <p>Copyright FannyLikesCooking© 2020 | All Rights Reserved.</p>
      </footer>
    <% end %>
  </body>
</html>
