<%= content_for :meta_title, @category.name %>

<div class="website-header">
  <h1 class="index-title"><%= @category.name %></h1>
</div>
<% if user_signed_in? %>
  <div class="margin-links">
    <%= link_to "new recipe", new_recipe_path, class: "website-button button-white" %>
    <%= link_to "edit category", edit_category_path, class: "website-button button-white margin-bottom" %>
  </div>
<% end %>
<div class="container">
  <div class="grid-wrapper">
  <% @recipes.each do |recipe| %>
    <%= render 'recipe', recipe: recipe %>
  <% end %>
  </div>
</div>

