<%= content_for :meta_title, @ingredient.name %>

<div class="website-header">
  <h1 class="index-title"><%= @ingredient.name %></h1>
</div>
<% if user_signed_in? %>
  <%= link_to "new recipe", new_recipe_path, class: "website-button button-white" %>
  <%= link_to "edit ingredient", edit_ingredient_path, class: "website-button button-white" %>
<% end %>
<div class="container">
  <div class="grid-wrapper">
  <% @recipes.each do |recipe| %>
    <%= render 'recipe', recipe: recipe %>
  <% end %>
  </div>
</div>
