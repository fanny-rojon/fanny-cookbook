<div class="container">
  <%= simple_form_for(@ingredient) do |f| %>
      <%= f.input :name %>
      <%= f.input :photo, as: :file %>

      <div>
        <%= f.button :submit, 'Save', class: 'btn btn-primary' %>
        <%= link_to 'Cancel', :back, class: 'btn btn-danger' %>
      </div>
  <% end %>
</div>
